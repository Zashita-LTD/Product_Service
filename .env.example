# Environment Configuration
# Copy this file to .env and fill in the values

# Application
APP_NAME=product-service
APP_ENV=development
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Server
HOST=0.0.0.0
PORT=8000
RELOAD=true
WORKERS=1

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/product_service
DB_POOL_MIN_SIZE=10
DB_POOL_MAX_SIZE=50

# Cache (Redis)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=600
CACHE_JITTER=120

# Message Queue (Kafka)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=product-service
KAFKA_TOPICS=product-events
KAFKA_RAW_TOPICS=raw-products
KAFKA_RAW_PRODUCTS_TOPIC=raw-products

# Google Vertex AI
VERTEX_PROJECT_ID=your-gcp-project-id
VERTEX_LOCATION=us-central1
VERTEX_MODEL_ID=gemini-1.5-flash
VERTEX_EMBEDDING_MODEL=text-embedding-004
EMBEDDING_BATCH_SIZE=50

# Circuit Breaker
CB_FAILURE_THRESHOLD=5
CB_RECOVERY_TIMEOUT=60

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Parser Service
ENABLED_PARSERS=petrovich,leroymerlin,sdvor,obi
PETROVICH_BASE_URL=https://petrovich.ru
LEROYMERLIN_BASE_URL=https://leroymerlin.ru
SDVOR_BASE_URL=https://sdvor.com
OBI_BASE_URL=https://obi.ru
HEADLESS_BROWSER=true
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30000
REQUESTS_PER_SECOND=2
MAX_RETRIES=3
RETRY_DELAY=5
