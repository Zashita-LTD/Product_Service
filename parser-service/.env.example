# Parser Service Environment Configuration
# Copy this file to .env and fill in the values

# Kafka Settings
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_RAW_PRODUCTS_TOPIC=raw-products
KAFKA_CLIENT_ID=parser-service
KAFKA_COMPRESSION_TYPE=gzip

# Petrovich Settings
PETROVICH_BASE_URL=https://moscow.petrovich.ru

# Parsing Settings
PARSING_INTERVAL_SECONDS=21600  # 6 hours
HEADLESS=true
MAX_CONCURRENT_PAGES=3
MIN_DELAY_SECONDS=1.5
MAX_DELAY_SECONDS=4.0
MAX_RETRIES=3
MAX_PRODUCTS_PER_RUN=10000

# Proxy Settings (optional)
# Comma-separated list of proxies: http://user:pass@host:port
# PROXY_LIST=http://user:pass@proxy1:8080,http://user:pass@proxy2:8080
# Or use proxies.txt file

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
